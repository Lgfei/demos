<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- t_user表 -->
<mapper namespace="com.lgfei.deom.springboot.dao.UserDao">

	<!-- 字段映射关系 -->
	<resultMap type="com.lgfei.deom.springboot.model.UserVO" id="UserVO">
		<id property="id" column="id" />
		<result property="createTime" column="createtime" javaType="java.util.Date" />
		<result property="updateTime" column="updatetime" javaType="java.util.Date" />
		<result property="name" column="name" />
		<result property="password" column="password" />
		<result property="mobilephone" column="mobilephone" />
		<result property="gender" column="gender" />
		<result property="state" column="state" />
		<result property="verifyState" column="verifystate" />
	</resultMap>

	<!-- 查询基础sql -->
	<sql id="query_base_sql">
		SELECT
		`id` AS id,
		`name` AS name,
		`password` AS password,
		`email` AS email,
		`mobilephone` AS mobilephone,
		`gender` AS gender,
		state AS state,
		verifystate AS verifyState,
		createtime AS createTime,
		updatetime AS updateTime
		FROM
		t_user
	</sql>

	<!-- 查询全部 -->
	<select id="findAll" resultMap="UserVO">
		<include refid="query_base_sql"></include>
	</select>

	<!-- 通过主键id单个查询 -->
	<select id="findById" resultMap="UserVO">
		<include refid="query_base_sql"></include>
		<where>
			id = #{id}
		</where>
	</select>

	<!-- 分页查询 -->
	<select id="find" resultMap="UserVO">
		<include refid="query_base_sql"></include>
		<where>
			<if test="param.id!=null">
				AND id = #{param.id}
			</if>
			<if test="param.name!=null">
				AND name LIKE CONCAT('%',#{param.name},'%')
			</if>
			<if test="param.email!=null">
				AND email = #{param.email}
			</if>
			<if test="param.mobilephone!=null">
				AND mobilephone = #{param.mobilephone}
			</if>
			<if test="param.gender!=null">
				AND gender = #{param.gender}
			</if>
			<if test="param.state!=null">
				AND state = #{param.state}
			</if>
			<if test="param.verifyState!=null">
				AND verifystate = #{param.verifyState}
			</if>
		</where>
		ORDER BY updatetime DESC
	</select>

	<!-- 插入 -->
	<insert id="insert">
		INSERT INTO t_user
		(`name`,`password`,email,mobliephone,gender,state,verifystate)
		VALUES
		(#{name},#{password},#{email},#{mobilephone},#{gender},#{state},#{verifyState})
	</insert>

	<!-- 删除 -->
	<delete id="delete">
		DELETE FROM t_user WHERE id=#{id}
	</delete>

	<!-- 修改 -->
	<update id="update">
		UPDATE t_user SET
		`name`=#{name},
		`password`=#{password},
		email=#{eamil},
		mobilephone=#{mobilephone},
		gender=#{gender},
		state=#{state},
		verifystate=#{verifyState},
		updatetime=NOW()
		WHERE id=#{id}
	</update>

</mapper>