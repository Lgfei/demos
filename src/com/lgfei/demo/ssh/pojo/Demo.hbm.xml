<?xml version="1.0" encoding="UTF-8"?>
<!-- 指定Hiberante3映射文件的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- hibernate-mapping是映射文件的根元素 -->
<hibernate-mapping package="com.lgfei.demo.ssh.pojo">
	<!-- 每个class元素对应一个持久化对象 -->
	<class name="Demo" table="demo">
		<!-- id元素定义持久化类的标识属性 -->
		<id name="demoId" column="demo_id">
			<!-- 指定主键生成策略 -->
			<generator class="sequence">
			    <param name="sequence">demo_seq</param>
			</generator>
		</id>
		<!-- property元素定义常规属性 -->
		<property name="demoName" column="demo_name"/>
		<property name="demoDate" column="demo_date"/>
	</class>
</hibernate-mapping>
